@model IEnumerable<TeamViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>UCI World- & Proteams</h1>

<p>
    <a asp-action="Create">Maak team aan</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TeamName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryNameShort)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompetitorsInTeam)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TeamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryNameShort)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompetitorsInTeam)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Wijzig</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Verwijder</a>
            </td>
        </tr>
}
    </tbody>
</table>
