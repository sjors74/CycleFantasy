@model WebCycleManager.Models.TeamViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Team</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TeamName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TeamName)
        </dd>
    </dl>
    <h5>Renners (@Model.CompetitorsInTeam)</h5>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Competitors.FirstOrDefault().FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Competitors.FirstOrDefault().LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Competitors.FirstOrDefault().Land)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Competitors)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Land)
                    </td>
                    <td>
                        <a asp-controller="Competitors" asp-action="Edit" asp-route-id="@item.CompetitorId">Wijzig</a> |
                        <a asp-controller="Competitors" asp-action="Details" asp-route-id="@item.CompetitorId">Details</a> |
                        <a asp-controller="Competitors" asp-action="Delete" asp-route-id="@item.CompetitorId">Verwijder</a>
                    </td>
                </tr>
           }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Wijzig</a> |
    <a asp-action="Index">Terug naar de lijst</a>
</div>
