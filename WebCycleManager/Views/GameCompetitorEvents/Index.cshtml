@model IEnumerable<Domain.Models.GameCompetitorEvent>

@{
    ViewData["Title"] = "Index";
}

<h1>Deelnemers</h1>

<p>
    <a asp-action="Create">Maak nieuw</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TeamName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().GameCompetitor.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().GameCompetitor.LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TeamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameCompetitor.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameCompetitor.LastName)

            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Wijzig</a> |
                <a asp-action="Details" asp-route-id="@item.Id" asp-route-eventId="@item.EventId">Team</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Verwijder</a> |
            </td>
        </tr>
}
    </tbody>
</table>
