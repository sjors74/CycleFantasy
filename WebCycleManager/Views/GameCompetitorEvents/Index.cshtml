@model List<GameCompetitorInEventViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Stand</h1>

<p>
    <a asp-action="Create">Maak nieuw</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().TeamName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().GameCompetitorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Score)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.OrderByDescending(c => c.Score).ThenBy(c => c.TeamName)) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TeamName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GameCompetitorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Score)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id">Wijzig</a> |
            <a asp-action="Details" asp-route-id="@item.Id" asp-route-eventId="@item.EventId">Team</a> |
            <a asp-action="Delete" asp-route-id="@item.Id">Verwijder</a> |
        </td>
    </tr>
}
    </tbody>
</table>
