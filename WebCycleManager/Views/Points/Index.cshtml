@model IEnumerable<PointsCompetitorInEventViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Ranglijst deelnemers</h1>

<table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayName("Nr")
            </th>
            <th>
                @Html.DisplayName("Naam")
            </th>
            <th>
                @Html.DisplayName("Punten")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ranking)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompetitorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Points)
                </td>
                <td>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Events" asp-route-eventId="@Model.FirstOrDefault().EventId" asp-action="Index">Terug naar de lijst</a>