@model CompetitorInEventViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>@Model.CompetitorName</h1>

<h4>@Model.EventName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CompetitorInEventId" />
            <input type="hidden" asp-for="EventId" />
            <input type="hidden" asp-for="TeamId" />
            <div class="form-group">
                <label asp-for="EventNumber" class="control-label"></label>
                <input asp-for="EventNumber" class="form-control" />
                <span asp-validation-for="EventNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Opslaan" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-route-eventId="@Model.EventId" asp-route-FilterTeam="@Model.TeamId.ToString()" asp-action="Index">Terug naar de lijst</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
